<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardview_horizontal_margin"
    android:layout_marginRight="@dimen/cardview_horizontal_margin"
    android:layout_marginTop="@dimen/cardview_vertical_margin"
    android:layout_marginBottom="@dimen/cardview_vertical_margin"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="4dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/function_items_height"
        android:orientation="horizontal"
        >

        <!-- Agregar un selector de color -->

        <TextView
            android:id="@+id/tvFormula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formula"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/function_items_margin"
            android:layout_marginRight="@dimen/function_items_margin"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>