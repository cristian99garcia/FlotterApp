<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true" >

    <android.support.v7.widget.CardView
        android:id="@+id/cvRecycler"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="@dimen/cardview_horizontal_margin"
        android:layout_marginRight="@dimen/cardview_horizontal_margin"
        android:layout_marginTop="@dimen/cardview_vertical_margin"
        android:layout_marginBottom="@dimen/cardview_vertical_margin"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp"
        android:clickable="true" >

        <WebView
            android:descendantFocusability="beforeDescendants"
            android:id="@+id/wvFormula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:scrollbars="none"
            android:foreground="?android:attr/selectableItemBackground" />

        <!--
        <TextView
            android:id="@+id/tvFormula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formula"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/function_items_margin"
            android:layout_marginRight="@dimen/function_items_margin"
            android:layout_marginTop="@dimen/function_items_margin"
            android:layout_marginBottom="@dimen/function_items_margin"
            android:clickable="true" />
        -->

    </android.support.v7.widget.CardView>

</FrameLayout>