<?xml version="1.0" encoding="utf-8"?>
<Keyboard
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="25%p"
    android:keyHeight="10%p"
    android:horizontalGap="1px"
    android:verticalGap="1px">

    <Row>
        <Key android:codes="-3"/>
        <Key android:codes="-3"/>
        <Key android:codes="-1" android:keyLabel="←"/>
        <Key android:codes="0" android:keyLabel="C"/>
    </Row>
    <Row>
        <Key android:keyLabel="7" android:keyOutputText="7"/>
        <Key android:keyLabel="8" android:keyOutputText="8"/>
        <Key android:keyLabel="9" android:keyOutputText="9"/>
        <Key android:keyLabel="÷" android:keyOutputText="÷"/>
    </Row>
    <Row>
        <Key android:keyLabel="4" android:keyOutputText="4"/>
        <Key android:keyLabel="5" android:keyOutputText="5"/>
        <Key android:keyLabel="6" android:keyOutputText="6"/>
        <Key android:keyLabel="×" android:keyOutputText="×"/>
    </Row>
    <Row>
        <Key android:keyLabel="1" android:keyOutputText="1"/>
        <Key android:keyLabel="2" android:keyOutputText="2"/>
        <Key android:keyLabel="3" android:keyOutputText="3"/>
        <Key android:keyLabel="-" android:keyOutputText="-"/>
    </Row>
    <Row>
        <Key android:keyLabel="(" android:keyOutputText="("/>
        <Key android:keyLabel=")" android:keyOutputText=")"/>
        <Key android:keyLabel="0" android:keyOutputText="0"/>
        <Key android:keyLabel="+" android:keyOutputText="+"/>
    </Row>
    <Row>
        <Key android:keyLabel="^" android:keyOutputText="^"/>
        <Key android:keyLabel="x" android:keyOutputText="x"/>
        <Key android:keyLabel="." android:keyOutputText="."/>
        <Key android:keyLabel="=" android:keyOutputText="="/>
    </Row>

</Keyboard>