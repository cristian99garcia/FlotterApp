    <Row>
        <Key android:keyLabel="q" android:keyOutputText="q"/>
        <Key android:keyLabel="w" android:keyOutputText="w"/>
        <Key android:keyLabel="e" android:keyOutputText="e"/>
        <Key android:keyLabel="r" android:keyOutputText="r"/>
        <Key android:keyLabel="t" android:keyOutputText="t"/>
        <Key android:keyLabel="y" android:keyOutputText="y"/>
        <Key android:keyLabel="u" android:keyOutputText="u"/>
        <Key android:keyLabel="i" android:keyOutputText="i"/>
        <Key android:keyLabel="o" android:keyOutputText="o"/>
        <Key android:keyLabel="p" android:keyOutputText="p"/>
    </Row>
    <Row>
        <Key android:keyLabel="a" android:keyOutputText="a"/>
        <Key android:keyLabel="s" android:keyOutputText="s"/>
        <Key android:keyLabel="d" android:keyOutputText="d"/>
        <Key android:keyLabel="f" android:keyOutputText="f"/>
        <Key android:keyLabel="g" android:keyOutputText="g"/>
        <Key android:keyLabel="h" android:keyOutputText="h"/>
