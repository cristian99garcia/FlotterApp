        <Key android:keyLabel="v" android:keyOutputText="v"/>
        <Key android:keyLabel="b" android:keyOutputText="b"/>
        <Key android:keyLabel="n" android:keyOutputText="n"/>
        <Key android:keyLabel="m" android:keyOutputText="m"/>
    </Row>
    <Row>
        <Key android:keyLabel="√" android:keyOutputText="√()"/>
        <Key android:keyLabel="π" android:keyOutputText="π"/>
        <Key android:keyLabel="!" android:keyOutputText="!"/>
        <Key android:keyLabel="ln" android:keyOutputText="ln()"/>
        <Key android:keyLabel="log" android:keyOutputText="log()"/>
        <Key android:keyLabel="|abs|" android:keyOutputText="||"/>
